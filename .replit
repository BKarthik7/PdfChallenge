modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "gumbo", "harfbuzz", "jbig2dec", "libjpeg_turbo", "mupdf", "openjpeg", "swig", "xcbuild"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PDF Intelligence System"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "pdf_intelligence_test"

[[workflows.workflow]]
name = "PDF Intelligence System"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install PyMuPDF==1.23.8 nltk==3.8.1 scikit-learn==1.3.2 numpy==1.24.3 scipy==1.10.1 && python -c \"import nltk; nltk.download('punkt', quiet=True); nltk.download('stopwords', quiet=True)\" && mkdir -p input output && python main.py --round 1a --input-dir ./input --output-dir ./output --debug"

[[workflows.workflow]]
name = "pdf_intelligence_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install PyMuPDF==1.23.8 nltk==3.8.1 scikit-learn==1.3.2 numpy==1.24.3 scipy==1.10.1 && python -c \"import nltk; nltk.download('punkt', quiet=True); nltk.download('stopwords', quiet=True)\" && mkdir -p input output && cp attached_assets/*.pdf input/ && python main.py --round 1a --input-dir ./input --output-dir ./output --debug"
